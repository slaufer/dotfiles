#!/bin/bash

watch -t -n 0.5 '''sensors -j | jq -r '\''to_entries[] | .key as $chip | .value | to_entries[] | select(.value | type == "object") | .key as $sensor | .value | to_entries[] | select(.key | test("temp[0-9]+_input")) | "\($chip) \($sensor | ascii_downcase | gsub("\\s+"; "_")) \(.value | round)Â°C"'\'' | column -t -R 3'
