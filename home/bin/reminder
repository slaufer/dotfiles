#!/bin/bash
width=$( tput cols )
IFS=$'\n' lines=( $(fold -s -w $width <<< "$1") )

(( ypad = ($( tput lines ) - ${#lines[@]}) / 2 ))

yes '' | head -n $ypad

for line in "${lines[@]}"; do
	
	yes ' ' | head -n $(( (width - ${#line}) / 2 )) | tr -d '\n'
	echo $line
done

yes '' | head -n $ypad

read
